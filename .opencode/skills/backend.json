{
  "name": "backend",
  "description": "Backend API development with Node.js, Express, and database integration",
  "version": "1.0.0",
  "capabilities": [
    "api-development",
    "database-management",
    "authentication",
    "authorization",
    "data-validation"
  ],
  "dependencies": {
    "express": "^4.18.0",
    "typescript": "^5.0.0",
    "@types/express": "^4.17.0",
    "dotenv": "^16.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3"
  },
  "configuration": {
    "runtime": "node",
    "framework": "express",
    "database": "postgresql",
    "authentication": "jwt",
    "port": 3001
  },
  "examples": [
    {
      "name": "REST API",
      "description": "Create RESTful API endpoints",
      "command": "npm run server"
    },
    {
      "name": "GraphQL API",
      "description": "Set up GraphQL server",
      "command": "npm run graphql"
    }
  ],
  "guidelines": [
    "Use TypeScript for type safety",
    "Implement proper error handling middleware",
    "Use environment variables for configuration",
    "Implement request validation using schema validation libraries",
    "Use async/await for asynchronous operations",
    "Implement proper logging",
    "Add rate limiting for API endpoints",
    "Use parameterized queries to prevent SQL injection",
    "Implement CORS properly",
    "Add security headers using helmet",
    "Structure code using MVC or clean architecture",
    "Write unit tests for business logic"
  ]
}
